<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".activities.SpawnSplashScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spawn_logo"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="26sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/spawn_logo"
        android:layout_width="@dimen/layout_150"
        android:layout_height="@dimen/layout_150"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_170"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/spawnlogo" />

</RelativeLayout>