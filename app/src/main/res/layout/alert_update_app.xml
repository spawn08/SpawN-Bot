<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@drawable/card_wiki_border"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                android:text="Update App"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginStart="@dimen/margin_5"
                android:padding="@dimen/margin_5"
                android:text="@string/update_app"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_16" />

            <Button
                android:id="@+id/update_app"
                android:layout_width="@dimen/layout_90"
                android:layout_height="@dimen/layout_40"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/wiki_button"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>