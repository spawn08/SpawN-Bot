<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewWeb"
        android:layout_gravity="start"
        android:layout_margin="@dimen/margin_15"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        cardview:cardCornerRadius="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_wiki_border"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_180"
                android:background="@drawable/image_gradient_background">

                <ImageView
                    android:id="@+id/web_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@android:color/transparent"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/thumbnail_not_found" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/web_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/margin_5"
                    android:text="Hello  "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_20" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>


            <TextView
                android:id="@+id/web_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="start"
                android:padding="@dimen/margin_5"
                android:text="SpawN"
                android:maxLines="2"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textsize_18" />

            <Button
                android:id="@+id/web_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_8"
                android:background="@drawable/wiki_button"
                android:padding="@dimen/margin_15"
                android:text="@string/app_name"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>