<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/containerNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        <ImageView-->
        <!--            android:id="@+id/newsImage"-->
        <!--            android:layout_width="50dp"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:layout_margin="@dimen/margin_10"-->
        <!--            android:scaleType="fitCenter"-->
        <!--            android:src="@drawable/thumbnail_not_found" />-->

        <TextView
            android:id="@+id/webTile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:clickable="true"
            android:focusable="true"
            android:maxLines="1"
            android:padding="@dimen/margin_5"
            android:text="A hello and what are you doing"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textsize_20" />

        <TextView
            android:id="@+id/webDisplayUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/webTile"
            android:layout_marginLeft="@dimen/margin_5"
            android:maxLines="1"
            android:padding="@dimen/margin_5"
            android:text="A hello and what are you doing"
            android:textColor="#1D976C"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/webDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/webDisplayUrl"
            android:layout_marginLeft="@dimen/margin_5"
            android:maxEms="15"
            android:padding="@dimen/margin_5"
            android:text="@string/update_app"
            android:textColor="#B3000000"
            android:textSize="@dimen/textsize_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/containerNews"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimary" />
</RelativeLayout>